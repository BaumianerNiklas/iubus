	"compilerOptions": {
		"strict": true,
		"target": "esnext",
		"module": "esnext",
		"outDir": "dist",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
